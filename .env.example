# Garp Documentation Environment Configuration
# Copy this file to .env and update with your values

# =============================================================================
# BUILD CONFIGURATION
# =============================================================================

# Node.js version for Tailwind CSS and other tools
NODE_VERSION=18

# Go version for building Garp CLI
GO_VERSION=1.21

# Automatically install missing development tools
AUTO_INSTALL=yes

# =============================================================================
# DEVELOPMENT SERVER CONFIGURATION
# =============================================================================

# Default development server port
DEV_SERVER_PORT=8080

# Test server port (for automated testing)
TEST_SERVER_PORT=8081

# =============================================================================
# DEPLOYMENT CONFIGURATION
# =============================================================================

# Netlify configuration
NETLIFY_AUTH_TOKEN=your_netlify_token_here
NETLIFY_SITE_ID=your_site_id_here

# Vercel configuration
VERCEL_TOKEN=your_vercel_token_here
VERCEL_PROJECT_ID=your_project_id_here

# Cloudflare Pages configuration
CLOUDFLARE_API_TOKEN=your_api_token_here
CLOUDFLARE_ACCOUNT_ID=your_account_id_here
CLOUDFLARE_PROJECT_NAME=garp-docs

# =============================================================================
# FORM SERVER CONFIGURATION (Optional)
# =============================================================================

# Resend API configuration for contact forms
RESEND_API_KEY=re_your_api_key_here
FROM_EMAIL=noreply@yourdomain.com
TO_EMAIL=contact@yourdomain.com

# Form server settings
FORM_SERVER_PORT=4567
FORM_SERVER_HOST=localhost

# Spam protection
HONEYPOT_FIELD=website
RATE_LIMIT_REQUESTS=10
RATE_LIMIT_WINDOW=3600

# =============================================================================
# MONITORING AND ANALYTICS (Optional)
# =============================================================================

# Lighthouse CI configuration
LHCI_GITHUB_APP_TOKEN=your_lighthouse_token_here

# Google Analytics (if using)
GA_MEASUREMENT_ID=G-XXXXXXXXXX

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# Security scanning configuration
NUCLEI_TEMPLATES_PATH=/path/to/nuclei-templates

# =============================================================================
# ADVANCED CONFIGURATION
# =============================================================================

# Build optimization
TAILWIND_MODE=production
CSS_MINIFY=true
SEARCH_INDEX_OPTIMIZE=true

# Debug and logging
DEBUG_MODE=false
LOG_LEVEL=info
BUILD_VERBOSE=false

# =============================================================================
# PLATFORM-SPECIFIC OVERRIDES
# =============================================================================

# Override build commands for specific platforms
NETLIFY_BUILD_COMMAND=scripts/build-docs.sh
VERCEL_BUILD_COMMAND=scripts/build-docs.sh
CLOUDFLARE_BUILD_COMMAND=scripts/build-docs.sh

# Override publish directories
NETLIFY_PUBLISH_DIR=site
VERCEL_OUTPUT_DIR=site
CLOUDFLARE_BUILD_DIR=site