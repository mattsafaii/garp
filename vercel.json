{
  "version": 2,
  "name": "garp-docs",
  "builds": [
    {
      "src": "scripts/build-docs.sh",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "site"
      }
    }
  ],
  "buildCommand": "chmod +x scripts/build-docs.sh && scripts/build-docs.sh",
  "outputDirectory": "site",
  "installCommand": "echo 'Installing build dependencies...' && npm install -g tailwindcss@latest pagefind@latest",
  "devCommand": "scripts/watch-docs.sh",
  "framework": null,
  "routes": [
    {
      "src": "/docs/(.*)",
      "dest": "/docs/$1.html",
      "check": true
    },
    {
      "src": "/blog/(.*)",
      "dest": "/blog/$1.html", 
      "check": true
    },
    {
      "src": "/docs",
      "dest": "/docs/",
      "status": 301
    },
    {
      "src": "/blog",
      "dest": "/blog/",
      "status": 301
    },
    {
      "src": "/(.*)",
      "dest": "/$1.html",
      "check": true
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection", 
          "value": "1; mode=block"
        },
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        },
        {
          "key": "Permissions-Policy",
          "value": "camera=(), microphone=(), geolocation=()"
        }
      ]
    },
    {
      "source": "/style.css",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/_pagefind/(.*)",
      "headers": [
        {
          "key": "Cache-Control", 
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/(.*).html",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=0, must-revalidate"
        }
      ]
    }
  ],
  "redirects": [
    {
      "source": "/docs",
      "destination": "/docs/",
      "permanent": true
    },
    {
      "source": "/blog", 
      "destination": "/blog/",
      "permanent": true
    }
  ],
  "trailingSlash": false,
  "cleanUrls": true,
  "env": {
    "NODE_VERSION": "18",
    "GO_VERSION": "1.21"
  },
  "github": {
    "enabled": true,
    "autoAlias": false
  },
  "functions": {},
  "crons": []
}